{
	"name": "carbon-joint",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"RE_CHECK": "=========================================",
		"watch": "pnpm run clean; pnpm run parcel:watch",
		"serve": "pnpm run clean; pnpm run parcel:serve",
		"build": "pnpm run clean; pnpm run parcel:build",
		"parcel:watch": "pnpm parcel watch",
		"parcel:serve": "parcel serve --port 4856 --no-source-maps",
		"parcel:build": "parcel build --no-source-maps --no-cache",
		"clean": "rm -rf ./dist/*; rm -rf ./.parcel-cache/*; rm -rf ./storybook-static/*",
		"RE-CHECK": "=========================================",
		"lint": "eslint src",
		"test": "echo \"Error: no test specified\" && exit 1",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"push:ghpages": "push-dir --dir=storybook-static --branch=gh-pages --force --verbose --cleanup"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@carbon/colors": "^11.20.0",
		"@joint/core": "^4.0.1",
		"lit": "^3.1.2"
	},
	"devDependencies": {
		"@parcel/config-default": "^2.11.0",
		"@parcel/transformer-sass": "^2.11.0",
		"@parcel/transformer-typescript-tsc": "^2.11.0",
		"@storybook/addon-essentials": "^7.6.16",
		"@storybook/addon-links": "^7.6.16",
		"@storybook/blocks": "^7.6.16",
		"@storybook/manager-api": "^7.6.17",
		"@storybook/theming": "^7.6.17",
		"@storybook/web-components": "^7.6.16",
		"@storybook/web-components-vite": "^7.6.16",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"eslint": "^8.56.0",
		"parcel": "^2.11.0",
		"pnpm": "^8.15.2",
		"process": "^0.11.10",
		"push-dir": "^0.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.6.16",
		"typescript": "^5.3.3"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"dist/"
		]
	},
	"targets": {
		"default": {
			"optimize": true,
			"source": [
				"src/index.html"
			],
			"distDir": "./dist/",
			"context": "browser",
			"engines": {
				"browsers": "> 0.1%, last 2 versions, not dead"
			}
		}
	}
