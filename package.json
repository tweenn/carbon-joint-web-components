{
	"name": "carbon-joint",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"watch": "pnpm run clean; pnpm run parcel:watch",
		"serve": "pnpm run clean; pnpm run parcel:serve",
		"build": "pnpm run clean; pnpm run parcel:build",
		"parcel:watch": "pnpm parcel watch",
		"parcel:serve": "parcel serve --port 4856 --no-source-maps",
		"parcel:build": "parcel build --no-source-maps --no-cache",
		"clean": "rm -rf ./dist/*; rm -rf ./.parcel-cache/*",
		"lint": "eslint src",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@carbon/colors": "^11.20.0",
		"@joint/core": "^4.0.1",
		"lit": "^3.1.2"
	},
	"devDependencies": {
		"@parcel/config-default": "^2.11.0",
		"@parcel/transformer-sass": "^2.11.0",
		"@parcel/transformer-typescript-tsc": "^2.11.0",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"eslint": "^8.56.0",
		"parcel": "^2.11.0",
		"pnpm": "^8.15.2",
		"typescript": "^5.3.3"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"dist/"
		]
	},
	"targets": {
		"default": {
			"optimize": true,
			"source": [
				"src/index.html"
			],
			"distDir": "./dist/",
			"context": "browser",
			"engines": {
				"browsers": "> 0.1%, last 2 versions, not dead"
			}
		}
	}
}
